<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="main.habitivity">

    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HabitivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddHabitActivity"
            android:label="@string/title_activity_add_habit"
            android:parentActivityName=".HabitivityMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="main.habitivity.HabitivityMain" />
        </activity>
        <activity
            android:name=".AddEvent"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".HabitivityMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="main.habitivity.HabitivityMain" />
        </activity>

        <provider
            android:name=".HabitsProvider"
            android:authorities="${applicationId}.provider"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".TodaysHabits" />
        <activity
            android:name=".FollowRequest"
            android:label="@string/title_activity_follow_request"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".LoginUser"
            android:label="@string/title_activity_login_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HabitEvents"
            android:label="@string/title_activity_habit_events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HabitDetails" />
        <activity android:name=".EventDetails" />
        <activity android:name=".EditEvent"></activity>
    </application>

</manifest>