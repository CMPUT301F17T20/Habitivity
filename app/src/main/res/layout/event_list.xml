<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/HabitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:text="ExampleHabit Event" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="116dp">

        <ImageView
            android:id="@+id/locationAdded"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="8dp"
            android:contentDescription="LocationAdded" />

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="163dp"
            android:layout_height="117dp"
            android:contentDescription="userImage"
            app:srcCompat="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/eventCompleted"
            android:layout_width="176dp"
            android:layout_height="22dp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="8dp"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="31dp"
            tools:text="Completed:  ex11/22/33" />

        <TextView
            android:id="@+id/EventComment"
            android:layout_width="210dp"
            android:layout_height="22dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:textAlignment="textEnd"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="31dp"
            tools:text='"Example Comment"' />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="132dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/check"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="247dp"
            tools:text="Settings (Mark)" />

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>