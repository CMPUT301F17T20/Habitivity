<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="main.habitivity.activities.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="main.habitivity.activities.MapsActivity" />

    <CheckBox
        android:id="@+id/displayMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/displayFollowingLocation"
        android:background="@android:color/transparent"
        android:text="Display My\n Locations" />

    <CheckBox
        android:id="@+id/displayFollowingLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/displayMyLocation"
        android:layout_marginTop="21dp"
        android:background="@android:color/transparent"
        android:text="Display Friends\n Locations" />

</RelativeLayout>
